<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-user-name">

      <%= link_to(@user.name, "/users/#{@user.id}") %>
      </div>
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= l @post.created_at %>
      </div>

      <% if Mindcatch.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to("マインドキャッチしました！", "/posts/#{@post.id}/mindcatches/#{@post[:id]}", {method: "delete"}) %>
      <% else %>
        <%= link_to("マインドキャッチ！", "/posts/#{@post.id}/mindcatches", {method: "post"}) %>
      <% end %>

      <%= @mindcatches_count %>

      <% if @post.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          <%= link_to("削除", "/posts/#{@post.id}", {method: "delete"}) %>
        </div>
      <% end %>
    </div>
  </div>
</div>