<!DOCTYPE html>
<html>
  <head>
    <title>Minder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-light fixed-top ">
        <!-- タイトル -->
        <% if @current_user %>
          <a class="navbar-brand" href="/posts">Minder</a>
        <% else %>
          <a class="navbar-brand" href="/">Minder</a>
        <% end %>
        <!-- ハンバーガーメニュー -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- ナビゲーションメニュー -->
        <% if @current_user %>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href=<%= "/users/#{@current_user.id}" %>><%= @current_user.name %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/posts">マインド一覧</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/posts/new">マインドセット</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users">ユーザー一覧</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" data-method="post" href="/logout">ログアウト</a>
              </li>
            </ul>
          </div>
        <% else %>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item ">
                <a class="nav-link" href="/about">Minderとは</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/posts">マインド一覧</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">新規登録</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">ログイン</a>
              </li>
            </ul>
          </div>
        <% end %>
      </nav>
        
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>