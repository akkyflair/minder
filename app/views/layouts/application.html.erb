<!DOCTYPE html>
<html>
  <head>
    <title>Minder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <div class="header-logo">
        <%= link_to("Minder", "/") %>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("Minderとは", "/about") %>
        </li>
        <li>
          <%= link_to("マインド一覧", "/posts/index") %>
        </li>
        <li>
          <%= link_to("マインドセット", "/posts/new") %>
        </li>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>